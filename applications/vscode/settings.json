// Place your settings in this file to overwrite the default settings
{
  // Appearance
  // "editor.fontFamily": "Fira Code",
  // "editor.fontLigatures": true,
  "editor.fontFamily": "'Cascadia Code', Menlo, Monaco, 'Courier New', monospace",
  "editor.fontSize": 14,
  "editor.lineHeight": 1.4,
  "editor.fontLigatures": "'calt', 'ss01'",
  "editor.quickSuggestionsDelay": 1,
  "editor.tabSize": 2,
  "editor.bracketPairColorization.enabled": true,
  // "editor.wordWrap": "on",
  "terminal.integrated.fontFamily": "Cascadia Code PL",
  "terminal.integrated.lineHeight": 1.2,
  "terminal.integrated.fontSize": 14,
  "workbench.iconTheme": "vscode-icons",
  "window.restoreFullscreen": true,
  "workbench.commandPalette.preserveInput": true,
  "workbench.startupEditor": "newUntitledFile",
  "explorer.confirmDragAndDrop": false,
  "explorer.confirmDelete": false,
  // Git
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "git.autofetch": true,
  // Markdown related
  "markdownlint.config": {
    "default": true,
    "MD007": {
      "indent": 2
    },
    "MD013": false,
    "MD014": false,
    "MD024": {
      "siblings_only": true
    },
    "MD033": false,
    "MD040": false
  },
  // Sets how line-breaks are rendered in the markdown preview. Setting it to 'true' creates a <br> for every newline.
  "markdown.preview.breaks": true,
  // Terminal
  "terminal.integrated.cursorStyle": "line",
  "terminal.integrated.cursorBlinking": true,
  "extensions.ignoreRecommendations": true,
  // "jest.pathToJest": "app/server/node_modules/.bin/jest",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "prettier.singleQuote": true,
  "prettier.jsxSingleQuote": true,
  "prettier.bracketSameLine": true,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "vscode.typescript-language-features"
  },
  "vsicons.dontShowNewVersionMessage": true,
  "workbench.colorTheme": "Material Fresh Theme üç∞",
  "[prisma]": {
    "editor.defaultFormatter": "Prisma.prisma"
  },
  "editor.formatOnSave": true,
  "typescript.updateImportsOnFileMove.enabled": "always",
  "css.lint.unknownAtRules": "ignore",
  "tailwindCSS.emmetCompletions": true,
  "emmet.includeLanguages": {
    "html.erb": "html",
    "erb": "html"
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "[css]": {
    "editor.defaultFormatter": "vscode.css-language-features"
  },
  "[snippets]": {
    "editor.defaultFormatter": "vscode.json-language-features"
  },
  "redhat.telemetry.enabled": false,
  "git.ignoreMissingGitWarning": true,
  "[dockercompose]": {
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.defaultFormatter": "redhat.vscode-yaml"
  },
  "[github-actions-workflow]": {
    "editor.defaultFormatter": "redhat.vscode-yaml"
  }
}